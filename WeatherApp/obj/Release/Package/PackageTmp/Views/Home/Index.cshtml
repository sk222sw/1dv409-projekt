@model WeatherApp.Models.Weather

@{
    ViewBag.Title = "Weather app";
}

<div class="row index">
    
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        @Html.AntiForgeryToken()
        <div>
            Enter a location
        </div>
        <div>
            @Html.EditorFor(m => @m.Location)
            <input type="submit" value="Get forecast" />
        </div>
    }
</div>